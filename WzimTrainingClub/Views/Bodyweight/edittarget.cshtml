@model TargetBodyweight

@{
    ViewData["Title"] = "Edytuj cel";
}

<div class="container w-50">
    <form asp-controller="Bodyweight" asp-action="EditTarget" method="post">

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Waga</label>
                    <input class="form-control" name="TargetWeight" type="number" min="1" max="300" step="0.1" required/>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Docelowa data</label>
                    <input class="form-control" name="TargetDate" type="date" required />
                </div>
            </div>


        </div>
        <div class="float-right">
            <a asp-controller="Bodyweight" asp-action="Summary" class="btn btn-secondary">Cofnij</a>
            <input type="submit" class=" btn btn-primary" value="Zapisz"/>
        </div>
    </form>

</div>